@page
@model HotelDemo.Pages.Admin.RoomTypesModel
@{
    ViewData["Title"] = "Admin — Room Types";
}

<div class="container py-4">
    <h2 class="mb-3">Admin — Room Types (@Model.CurrentPropertyName)</h2>

    @if (TempData["ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["err"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="row g-4">
        <!-- Create -->
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header">Create room type</div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Add">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                        <div class="row g-2">
                            <div class="col-4">
                                <label class="form-label">Code</label>
                                <input asp-for="Add.Code" class="form-control form-control-sm" />
                                <span asp-validation-for="Add.Code" class="text-danger small"></span>
                            </div>
                            <div class="col-8">
                                <label class="form-label">Name</label>
                                <input asp-for="Add.Name" class="form-control form-control-sm" />
                                <span asp-validation-for="Add.Name" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-2">
                            <label class="form-label">Description</label>
                            <textarea asp-for="Add.Description" class="form-control form-control-sm" rows="2"></textarea>
                        </div>

                        <div class="row g-2">
                            <div class="col-4">
                                <label class="form-label">Base occ.</label>
                                <input asp-for="Add.BaseOccupancy" class="form-control form-control-sm" />
                            </div>
                            <div class="col-4">
                                <label class="form-label">Max occ.</label>
                                <input asp-for="Add.MaxOccupancy" class="form-control form-control-sm" />
                            </div>
                            <div class="col-4">
                                <label class="form-label">Order</label>
                                <input asp-for="Add.DisplayOrder" class="form-control form-control-sm" />
                            </div>
                        </div>

                        <div class="row g-2 mt-1">
                            <div class="col-8">
                                <label class="form-label">Beds</label>
                                <input asp-for="Add.BedConfiguration" class="form-control form-control-sm" placeholder="1xDouble / 2xSingle" />
                                <span asp-validation-for="Add.BedConfiguration" class="text-danger small"></span>
                            </div>
                            <div class="col-4 form-check mt-4">
                                <input asp-for="Add.IsActive" class="form-check-input" />
                                <label class="form-check-label">Active</label>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button class="btn btn-primary btn-sm">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- List -->
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">Room types (@Model.CurrentPropertyName)</div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-sm align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Occ.</th>
                                    <th>Beds</th>
                                    <th>Active</th>
                                    <th>Order</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items.Count == 0)
                                {
                                    <tr><td colspan="7" class="text-center text-muted py-3">No room types</td></tr>
                                }
                                else
                                {
                                    @foreach (var rt in Model.Items)
                                    {
                                        <tr>
                                            <td>@rt.Code</td>
                                            <td>@rt.Name</td>
                                            <td>@rt.BaseOccupancy / @rt.MaxOccupancy</td>
                                            <td>@rt.BedConfiguration</td>
                                            <td>@(rt.IsActive ? "Yes" : "No")</td>
                                            <td>@rt.DisplayOrder</td>
                                            <td class="text-end">
                                                <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Delete room type @rt.Name?');">
                                                    <input type="hidden" name="id" value="@rt.Id" />
                                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-2 mb-0">
                <small>Η διαγραφή δεν επιτρέπεται αν υπάρχουν δωμάτια ή κρατήσεις που το χρησιμοποιούν.</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
